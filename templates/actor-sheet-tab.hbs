<div class="beavers-crafting actor-tab">
  <div class="crafting-tab-simple">
    <!-- Open Crafting Manager Button -->
    <div class="open-manager-section">
      <button class="openCraftingManager" type="button">
        <i class="fas fa-hammer"></i>
        <span>{{localize "beaversCrafting.actorSheet.openManager"}}</span>
        <i class="fas fa-external-link-alt"></i>
      </button>
    </div>

    <!-- Quick Summary -->
    <div class="crafting-summary">
      <h3>{{localize "beaversCrafting.actorSheet.quickSummary"}}</h3>
      {{#if folders}}
        <div class="summary-stats">
          <div class="stat-item">
            <i class="fas fa-tasks"></i>
            <span class="stat-label">{{localize "beaversCrafting.actorSheet.activeProjects"}}:</span>
            <span class="stat-value">{{projectCount}}</span>
          </div>
        </div>
        <div class="project-quick-list">
          {{#each folders as |folder|}}
            {{#each folder.recipes as |item|}}
              <div class="quick-project-item">
                <span class="project-name">{{item.chatData.title}}</span>
                <span class="project-status">{{item.chatData.status}}</span>
              </div>
            {{/each}}
          {{/each}}
        </div>
      {{else}}
        <div class="no-projects-hint">
          <i class="fas fa-info-circle"></i>
          <p>{{localize "beaversCrafting.actorSheet.noActiveProjects"}}</p>
        </div>
      {{/if}}
    </div>
  </div>
</div>