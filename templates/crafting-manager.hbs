<div class="flexrow crafting-manager-container" style="height:100%;gap:0;">
  <!-- Left Panel: Recipe Browser -->
  <div class="recipe-browser flexcol" style="flex: 1; height:100%; border-right: 2px groove var(--beavers-border-color);">
    <div class="flexrow" style="height:calc( 100% - 40px)">
      <aside class="sidebar flexcol">
        <div style="flex:0;min-height:34px;line-height:34px" class="flexrow">
          <i style="width:25px;flex: 0;margin: auto;display: block;padding: 0px 5px;" class="fas fa-search"></i>
          <select class="search">
            <option value="2" {{#if (eq craftingApp.filter 2)}}selected{{/if}}>all</option>
            <option value="1" {{#if (eq craftingApp.filter 1)}}selected{{/if}}>available</option>
            <option value="0" {{#if (eq craftingApp.filter 0)}}selected{{/if}}>usable</option>
            <option value="3" {{#if (eq craftingApp.filter 3)}}selected{{/if}}>own</option>
          </select>
          <a style="width:25px;flex: 0;margin: auto;display: block;padding: 0px 5px;" class="fas fa-sort-amount-up fa-fw"></a>
        </div>
        <div class="content">
          <nav class="navigation">
            {{>beavers-folders renderTemplate="beavers-recipe-folder-item" folders=craftingApp.folders}}
          </nav>
        </div>
      </aside>
      <section style="height:100%" class="sheet-body">
        <!-- Recipe details will be rendered here by CraftingApp -->
      </section>
    </div>
  </div>

  <!-- Right Panel: Active Projects -->
  <div class="active-projects flexcol" style="flex: 0 0 400px; height:100%;">
    <div class="projects-header">
      <h3>{{localize "beaversCrafting.manager.activeProjects"}}</h3>
    </div>

    <div class="projects-content flexcol" style="flex: 1; overflow-y: auto; padding: 12px;">
      {{#if hasActiveProjects}}
        {{>beavers-folders renderTemplate="beavers-actor-folder-item" folders=activeProjects}}
      {{else}}
        <div class="no-projects">
          <i class="fas fa-hammer fa-3x"></i>
          <p>{{localize "beaversCrafting.manager.noActiveProjects"}}</p>
          <p class="hint">{{localize "beaversCrafting.manager.noActiveProjectsHint"}}</p>
        </div>
      {{/if}}
    </div>
  </div>
</div>
